//cpp program to check the given array elements are in ascending order or not
#include<bits/stdc++.h>
using namespace std;
int main()
{
	int n,flag=0;
	cout<<"Enter number of elements do u want in array:";
	cin>>n;
	int a[n];
        cout<<"Enter array elements:" ;
	for(int i=0;i<n;i++)
	{
		cin>>a[i];
	}
	for(int i=0;i<n-1;i++)
	{
	if(a[i]>a[i+1])
	{
		flag=1;
		break;
	}		
	}

	if(flag==0)
	{
		cout<<"The array elements are in ascending order";
	}
	else
	{
		cout<<"The elements are not in order";
	}
	return 0;
	
}
